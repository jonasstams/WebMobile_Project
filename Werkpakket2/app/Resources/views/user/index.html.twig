{% extends 'base.html.twig' %}
{% block title %}
    Admin - Coach overview
{% endblock %}
{% block headertitle %}
    <h1>Coach list</h1>
{% endblock %}
{% block body %}
    <div class="row">
    <div class="col-md-4">
        {% if is_granted('ROLE_ADMIN') %}
            <div id="menu-settingsLeftBlock">
                <a href="{{ path('admin_route') }}"> <div class="return-button"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span><p>Back</p></div></a>
            </div>
        {% endif %}
</div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
        <ul>
            <li>
                <div id="menu-settingsLeftBlock">
                    <a href="{{ path('user_new') }}"> <div class="create-coach-button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span><p>Add</p></div></a>
                </div>
            </li>
        </ul>
    </div>
        </div>
    <table id="user-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>
                {% if 'ADMIN' in user.rolesString %}
                    <span class="label label-warning">Admin</span>

                {% endif %}
                {% if 'COACH' in user.rolesString %}
                    <span class="label label-primary">Coach</span>
                {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-default" data-toggle="tooltip" title="" data-original-title="Edit coach"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        </li>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-default" data-toggle="tooltip" title="" data-original-title="Show coach">     <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>


{% endblock %}
