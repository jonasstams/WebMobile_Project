{% extends 'base.html.twig' %}
{% block headertitle %}
    <h1>User edit</h1>
{% endblock %}
{% block body %}

    <div class="row">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-1">

            <a href="{{ path('user_index') }}"><div class="nice-button half-button form-button" ><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span><p>Back</p></div></a>
        </div>
        <div class="col-md-2">
             <button name="mysubmitbutton" id="mysubmitbutton" type="submit" class="nice-button half-button form-button">
                 <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                 <p>Edit</p>
            </button>
            {{ form_end(edit_form) }}
        </div>

        <div class="col-md-1">
            {{ form_start(delete_form) }}
            <a data-toggle="modal" data-target="#deleteModal"><div class="nice-button half-button form-button">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <p>Delete</p>
                    </div>
            </a>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <p>Do you really want to delete this user?</p>
                            <a data-dismiss="modal"><div class="col-md-5 nice-button"><p>No</p></div></a>
                            <button type="submit" class="col-md-5 nice-button"><p>Yes</p></button></a>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(delete_form) }}
        </div>

    </div>

{% endblock %}
