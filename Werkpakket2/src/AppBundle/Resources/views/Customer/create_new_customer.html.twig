{% extends "::base.html.twig" %}

{% block headertitle %}<h1>Please provide the following fields for the new Customer </h1>{% endblock %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/jquery.mobile.custom.min.js') }}"></script>
        <script src="{{ asset('js/coach.js') }}"></script>
    {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/ProfileLayout.css') }}">
    {% endblock %}
    <div class="row">
        <div class="col-md-4">
            {% if is_granted('ROLE_COACH') %}
                <div class="backbutton">
                    <a href="{{ path('customer_overview')}}" type="button" class="btn btn-default" data-toggle="tooltip" title="Admin Home">
                        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
                    </a> </div>
            {% endif %}
        </div>
    </div>
    <div class="container">
        <form action="{{ path('create_new_customer') }}" method="POST">
            <p>First Name</p>
            <input class="form-control" type="text" name="first_name"/>
            <p>Last Name</p>
            <input class="form-control" type="text" name="last_name" />
            <p>Habit 1</p>
            <input class="form-control" type="text" name="habit1"/>
            <p>Habit 2</p>
            <input class="form-control" type="text" name="habit2"/>
            <p>Habit 3</p>
            <input class="form-control" type="text" name="habit3"/>
            <input type="submit" id="customerCreateButton" class="btn btn-default btn-lg" value="Create Customer"/>
        </form>
    </div>
{% endblock %}
