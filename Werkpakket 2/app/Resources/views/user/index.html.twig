{% extends 'base.html.twig' %}
{% block title %}
    Admin - Coach overview
{% endblock %}
{% block headertitle %}
    <h1>Coach list</h1>
{% endblock %}
{% block body %}


    <table id="user-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>
                {% if 'ADMIN' in user.rolesString %}
                    <span class="label label-primary">Admin</span>

                {% endif %}
                {% if 'COACH' in user.rolesString %}
                    <span class="label label-success">Coach</span>
                {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-default" data-toggle="tooltip" title="" data-original-title="Edit coach"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        </li>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-default" data-toggle="tooltip" title="" data-original-title="Show coach">     <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    <ul>
        <li>
            <a href="{{ path('user_new') }}" class="btn btn-default" data-toggle="tooltip" title="" data-original-title="Show reports"> Create new coach</a>
        </li>
    </ul>

{% endblock %}
