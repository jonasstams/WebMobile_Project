{% extends "::base.html.twig" %}

{% block title %}Coach{% endblock %}

{% block headertitle %}<h1>Coach page - Customer Overview</h1>{% endblock %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script src="{{ asset('js/searchFunction.js') }}"></script>

    {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/coach.css') }}">
    {% endblock %}
    <input id="search" type="text" placeholder="Search..." class="center-block"/>
    </br>
    </br>
    <table id="table" class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Habit #1</th>
            <th>Habit #2</th>
            <th>Habit #3</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.first_name }}</td>
                <td>{{ customer.last_name }}</td>
                <td>{{ customer.habit1 }}</td>
                <td>{{ customer.habit2 }}</td>
                <td>{{ customer.habit3 }}</td>
                <td>
                    <a href="{{ path('coach_customer_habits_overview', {'id':customer.id}) }}" type="button" class="btn btn-default" data-toggle="tooltip" title="Edit habits">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('coach_customer_report_overview', {'id':customer.id}) }}" type="button" class="btn btn-default" data-toggle="tooltip" title="Show reports">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
