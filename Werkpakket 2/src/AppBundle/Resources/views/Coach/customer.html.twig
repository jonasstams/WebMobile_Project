{% extends "::base.html.twig" %}

{% block title %}Coach{% endblock %}

{% block headertitle %}<h1>Coach page - Customer Overview</h1>{% endblock %}

{% block body %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/searchFunction.js') }}"></script>
    {% endblock %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COACH') %}
        <h1 class="text-center">Coachpage</h1>
    {% endif %}
    <input id="search" type="text" placeholder="Search..." class="center-block"/>
    </br>
    <table id="table" class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Habit #1</th>
            <th>Habit #2</th>
            <th>Habit #3</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.first_name }}</td>
                <td>{{ customer.last_name }}</td>
                <td>{{ customer.habit1 }}</td>
                <td>{{ customer.habit2 }}</td>
                <td>{{ customer.habit3 }}</td>
                <td>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" title="Edit habits">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" title="Show reports">
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
